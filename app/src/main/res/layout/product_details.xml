<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/malf_snape"
    tools:context=".productDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:alpha="0.7"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProductIDTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ID"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProductID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:text="id"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:alpha="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProductNameTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Product Name" />
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="name"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:alpha="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProductDescriptionTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            android:text="desc"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:alpha="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPriceTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Price"/>
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:alpha="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Category" />
        <TextView
            android:id="@+id/tvProductCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="category"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgProductPic"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:alpha="0.7"
            android:layout_gravity="center"

            app:srcCompat="@drawable/com_facebook_auth_dialog_cancel_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:alpha="0.7"
            android:orientation="vertical">


            <Button
                android:id="@+id/buyButton"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity = "top"
                android:layout_marginLeft="65dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:text="Buy"
                android:onClick="onBuyProductClicked"/>
            <Button
                android:id="@+id/reviewButton"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity = "bottom"
                android:layout_marginLeft="65dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Add Review"
                />

        </LinearLayout>







    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.7"
        android:id="@+id/recyclerReviews">



    </android.support.v7.widget.RecyclerView>





</android.support.v7.widget.LinearLayoutCompat>