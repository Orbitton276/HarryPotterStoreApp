<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hp_professors"
    tools:context=".resetPassword_activity">

    <EditText
        android:id="@+id/tvEmailToReset"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal"
        android:hint="@string/emailTextView"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="22dp"
        />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:onClick="onResetPasswordClicked"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:text="@string/resetPasswordButtonText" />



</android.support.v7.widget.LinearLayoutCompat>